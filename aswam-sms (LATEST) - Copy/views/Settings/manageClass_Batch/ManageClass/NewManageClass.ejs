    <form action="/setting/ManageClass/save" method="post">
    <div class="row">
        <div class="col-sm-2"></div>
            <div class="col-sm-8" style="background-color:#FFF; padding: 20px">
                <div class="col-md-12">
                   <div class="col-md-6">
                        <label for="">Class Name</label> <input type="text" name="classname" class="form-control"  >
                   </div>
               </div>
               <div class="col-md-12">
                    <div class="col-md-6">
                    <label for="">Section Name</label> <input type="text" name="sectionname" class="form-control" >
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <label for="">Code </label> <input type="text" name="code" class="form-control" >
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
