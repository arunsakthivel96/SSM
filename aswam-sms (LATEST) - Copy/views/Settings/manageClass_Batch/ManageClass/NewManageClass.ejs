                            <option value="CCE">CCE</option>
                            <option value="ICSE">ICSE</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                       <label for="">Enable elective selection</label> <input  type="checkbox" value="1" name="enableelectiveselectio">
                    </div>
                </div>
                <h3>Initial batch details</h3>
                <div class="col-md-12">
                        <div class="col-md-6">
                            <label for="">Name </label> <input type="text" name="batchname" class="form-control" >
                        </div>
                    </div>
                    <div class="col-md-12">
                            <div class="col-md-6">
                                <label for="">Academic year</label>
                                <select name="bacademicyear" id="" class="form-control" >
                                    <option value="Select an academic Year" selected>Select an academic year</option>
                                    <option value="First Academic Year">First Academic Year</option>
                                   
                                </select>
                            </div>
                        </div>
                        <!-- Start date
                        End date -->
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <label for="">Start date </label> <input type="date" name="bstartdate" class="form-control" >
                            </div>
                        </div>
                        <div class="col-md-12">
                                <div class="col-md-6">
                                    <label for="">End date</label> <input type="date" name="benddate" class="form-control" >
                                </div>
                        </div>
             
                        <div class="col-md-12">
                                <div class="col-md-6">
                                    <button type="submit" style="margin: 20px" class="btn btn-success">Save</button>
                                </div>
                        </div>
            </div>
        <div class="col-sm-2"></div>
